<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="plugin.program.xmldownloader" name="XML Downloader" version="1.1" provider-name="LB">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">XML Downloader</summary>
        <description lang="en">Simple tool to download the advancedsettings xml for Kodi 17 as well as older versions.</description>
        <disclaimer>Use at your own risk!</disclaimer>
        <platform>all</platform>
        <news>1.1 (2016-9-03)
            - Added Advanced Settings for Older Version
            1.0 (2016-8-24)
            - Initial Release</news>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>

<addon id="script.supergirlmaintenance" name="Supergirl Maintenance" version="1.2"
    provider-name="LB">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Supergirl Maintenance</summary>
        <description lang="en">Spin-off of Raw Maintenance. This tool was originally created in order to learn more about building Kodi add-ons. In my testing it is fully functional so enjoy!</description>
        <platform>all</platform>
        <website>http://www.lbtechtips.com</website>
        <news>1.2 (2016-8-25)
            - Initial Support for Kodi 17</news>
        <disclaimer>Use at your own risk!</disclaimer>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>media/screenshot-01.jpg</screenshot>
        </assets>
    </extension>
</addon>

<addon id="plugin.video.kodidownloader" name="Kodi Downloader" version="1.1" provider-name="LB">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Kodi Downloader</summary>
        <description lang="en">Simple tool to download newer versions of Kodi. This tool is only compatible with devices capable of running Android apps. Some examples are the Amazon Fire TV, Amazon Fire TV Stick, Amazon Fire tablets, and any other devices without the Google Play Store. Android devices can simply update from the Google Play Store without the need of this addon, unless you would like to try the experimental versions.</description>
        <website>http://www.lbtechtips.com</website>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <screenshot>media/screenshot-01.png</screenshot>
        </assets>
        <news>1.1 (2016-9-03)
            - Few visual improvements
            1.0 (2016-8-25)
            - Initial release with Support for Kodi 17</news>
        <disclaimer>Use at your own risk!</disclaimer>
    </extension>
</addon>

</addons>
